public class App {

	public static void main(String[] args) {
		App app = new App();

		int value = 7;
		System.out.println("1. Value is " + value);
		
		app.show(value);
		System.out.println("1. Value is " + value);
	}

	public void show(int value) {
		System.out.println("2. Value is " + value);
	}
	
}
