class Thing {
	public final static int LUCKY_NUMBER = 1;
	public String name;
	public static String opis;

	public static int count = 0;
	public Thing(){
		count++;
	}
	public void showName() {
		System.out.println(opis + ": " + name);
	}

	public static void showInfo() {
		System.out.println(opis);
		// wont work: System.out.println(name);
	}
}

public class App {
	public static void main(String[] args) {
		Thing.opis = "I am a thing";
		// System.out.println(Thing.opis);

		Thing.showInfo();

		System.out.println("Przed utowrzeniem obiektów = " + Thing.count);
		Thing thing1 = new Thing();
		Thing thing2 = new Thing();
		System.out.println("Po utowrzeniu obiektów = " + Thing.count);
		thing1.name = "Bob";
		thing2.name = "Sue";

		// System.out.println(thing1.name);
		// System.out.println(thing2.name);
		thing1.showName();
		thing2.showName();

		System.out.println(Math.PI);
		//nie mo¿na zmieniæ czegoœ co jest static final Math.PI = 3;
		System.out.println(Thing.LUCKY_NUMBER);
	}
}
